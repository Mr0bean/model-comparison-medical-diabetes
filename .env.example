# ==============================================
# JieKou AI API Configuration (统一API接口)
# ==============================================
# 请复制此文件为 .env 并填入您的实际 API Key

JIEKOU_API_KEY=your_api_key_here
JIEKOU_BASE_URL=https://api.jiekou.ai/openai

# ==============================================
# DeepSeek Official API Configuration (官方接口)
# ==============================================
# DeepSeek官方API配置
# 申请地址: https://platform.deepseek.com/
# 推荐使用: deepseek-reasoner (推理增强模型)

DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_DEFAULT_MODEL=deepseek-reasoner
DEEPSEEK_TEMPERATURE=1.0
DEEPSEEK_MAX_TOKENS=8192
DEEPSEEK_STREAM=False

# ==============================================
# Model Configuration
# ==============================================
DEFAULT_MODEL=gpt-5.1
DEFAULT_TEMPERATURE=1.0
DEFAULT_MAX_TOKENS=2048
DEFAULT_STREAM=True

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=INFO
